<Window x:Class="UCV.UIClient.Companias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCV.UIClient"
        mc:Ignorable="d"
        Title="Companias" Height="300" Width="394">
    <Grid>
        <DataGrid x:Name="Lista" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="366" Margin="10,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RUC" Binding="{Binding Ruc}" ></DataGridTextColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="Filtro" HorizontalAlignment="Left" Height="23" Margin="55,225,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="190,228,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
